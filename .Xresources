! general config
URxvt*urgentOnBell: true
URxvt*cursorBlink: false
URxvt*termName: rxvt-unicode-256color
URxvt*scrollBar: false
URxvt*savelines: 10000
URxvt*iso14755: false
URxvt*depth: 32

! font config
URxvt*letterSpace: -1
URxvt*font: xft:Fira Mono:size=12
URxvt*boldFont: xft:Fira Mono Mono:bold:size=12
URxvt*italicFont: xft:Fira Mono:size=12
URxvt*boldItalicFont: xft:Fira Mono:bold:size=12
URxvt*imFont: xft:Fira Mono:size=12

Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

! colors
#include "/home/newtant/dotfiles/colors/urxvt"

! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
rofi.color-enabled: true
rofi.color-window: #212121, #ccb080, #ccb080
rofi.color-normal: #212121, #e9e9e9, #333333, #ccb080, #212121
rofi.color-active: #212121, #819ccc, #333333, #819ccc, #e9e9e9
rofi.color-urgent: #212121, #cc8b81, #333333, #cc8b81, #e9e9e9
